{{#each blogs as |blog|}}


   <div class="blog-card card-1" data-id="{{blog.id}}">
     <h3>{{blog.title}}</h3>
     <br>
     <p>{{blog.content}}</p>
     <br>


     <!-- Button trigger modal -->
     <div class="blog-card-list">
       <button type="button" class="btn btn-default" data-toggle="modal" data-target="#mod{{blog.id}}">
         Update!
       </button>
       <button type="button" name="button" class="btn btn-default remove-blog" data-id="{{blog.id}}">Remove</button>
     </div>

     <footer>Author: {{blog.author}}</footer>
     <h5>Last Updated: {{blog.updatedAt}}</h5>

     <!-- Modal -->
     <div class="modal kapat" id="mod{{blog.id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
       <div class="modal-dialog" role="document">
         <div class="modal-content">
           <fieldset>
             <legend>Update Blog</legend>
             <form class="submit-blog-update" data-id="{{blog.id}}">
               <label class="need-space">
                 Title:
                 <input type="text" name="blog[title]" value="{{blog.title}}" class="clean-update">
               </label>
               <label>
                 Blog Content:
                 <textarea type="text" name="blog[content]" class="clean-update">{{blog.content}}</textarea>
               </label>
               <label class="need-space">
                 Author:
                 <input type="text" name="blog[author]" value="{{blog.author}}">
               </label>
               <button type="submit" class="btn btn-default" data-id="{{blog.id}}">Submit</button>
             </form>
           </fieldset>
           <div class="modal-footer">
             <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
           </div>
         </div>
       </div>
     </div>
   </div>

{{/each}}
