<button type="button" class="btn btn-primary btn-lg hidden" data-toggle="modal" data-target="#blog-create" id='create-blog'>
      Create Blog
    </button>
<!-- Modal -->
<div class="modal kapat" id="blog-create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Create Blog</h4>
      </div>
      <div class="modal-body">
        <form class='create-blog'>
          <input type="text" name="blog[title]" placeholder="Enter Title">
          <textarea type="text" name="blog[content]" placeholder="Enter Content for Body" class="clean-update"></textarea>
          <input type="text" name="blog[author]" placeholder="Enter Author Name">
          <button type="submit" class="btn btn-default">Create Blog</button>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- index blog -->
<button type="button" class="btn btn-success btn-lg" id="blog-index">View Blogs</button>
