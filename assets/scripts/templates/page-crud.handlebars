<button type="button" class="btn btn-default" data-toggle="modal" data-target="#create-page">
          Create Webpage
        </button>
<!-- Modal -->
<div class="modal kapat" id="create-page" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <fieldset>
        <legend>Create a Page</legend>
        <form class='create-page'>
          <label class="need-space">
            Header:
            <input type="text" name="page[header]" placeholder="Enter Header">
          </label>
          <label>
            Page Body:
            <textarea type="text" name="page[body]" placeholder="Enter Content for Body" rows="10" cols="50"></textarea>
          </label>
          <label class="need-space">
            Footer:
            <input type="text" name="page[footer]" placeholder="Enter Footer">
          </label>
          <button type="submit" class="btn btn-default create-webpage">Create Webpage</button>
        </form>
      </fieldset>
    </div>
  </div>
</div>

<button type="button" class="btn btn-default" id="page-index">View Pages</button>
